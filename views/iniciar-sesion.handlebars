<main class="contenedor">
    <form action="/iniciar-sesion" method="POST" class="default-form">
        <div class="campo">
            <label>E-mail</label>
            <input type="email" name="email" placeholder="Tu Email">
        </div>
        <div class="campo">
            <label>Contraseña</label>
            <input type="password" name="password" placeholder="Tu Contraseña">
        </div>
        <div class="campo acciones">
            <a href="/crear-cuenta">¿No Tienes una Cuenta?</a>
            <a href="/reestablecer-password">¿Olvidaste tu Contraseña?</a>
        </div>
        <div class="campo">
            <input type="submit" value="Iniciar Sesión" class="btn btn-amarillo">
        </div>
    </form>
</main>