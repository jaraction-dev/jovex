<main class="contenedor">
    <form action="/crear-cuenta" method="POST" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Tu Nombre">
        </div>
        <div class="campo">
            <label>E-mail</label>
            <input type="email" name="email" placeholder="Tu E-Mail">
        </div>
        <div class="campo">
            <label>Contraseña</label>
            <input type="password" name="password" placeholder="Tu Contraseña">
        </div>
        <div class="campo">
            <label>Confirma tu Contraseña</label>
            <input type="password" name="confirmar" placeholder="Repetir Contraseña">
        </div>
        <div class="campo acciones">
            <a href="/iniciar-sesion">¿Ya tienes una cuenta?</a>
        </div>
        <div class="campo">
            <input type="submit" value="Crear Cuenta" class=" btn btn-azul">
        </div>
    </form>
</main>